---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";
var posts = (await getCollection("blog")).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

// 过滤掉无 tag 的文章
posts = posts.filter((post) => post.data.tags && post.data.tags.length > 0);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			.App-logo {
				height: 40vmin;
				box-shadow: 0 0 20px var(--accent);
				pointer-events: none;
			}

			.App-img {
				vertical-align: middle;
			}

			.logo-container {
				gap: 30px;
				/* padding-bottom: inherit; */
				display: flex;
				align-items: center;
				text-align: center;
				justify-content: center;
			}

			hr {
				margin: 30px;
			}

			main {
				width: 960px;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
				position: relative;
			}
			ul li {
				width: calc(50% - 1rem);
				/* align-content: center */
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			/* ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
			}
			ul li:first-child img {
				width: 100%;
			}
			ul li:first-child .title {
				font-size: 2.369rem;
			} */
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}
			ul li a {
				display: block;
				border-radius: 12px;
				padding: 0.5rem;
				border: 1px dashed var(--accent);
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<div class="logo-container">
				<img src="/logo.webp" class="App-logo" />
				<p>
					投资 旅游 编程 健身
					<br />
					一万年太短，不争朝夕
					<br />
					<span>
						<a
							href="https://x.p1gd0g.cc"
							target="_blank"
							rel="noopener noreferrer"
						>
							<img
								class="App-img"
								src="icon/gridder.png"
								width={30}
								height={30}
							/> Gridder 网格交易测试工具</a
						>
					</span>
					<br />
					<span>
						<a
							href="https://t.p1gd0g.cc"
							target="_blank"
							rel="noopener noreferrer"
						>
							<img
								class="App-img"
								src="icon/since-then-timer.png"
								width={30}
								height={30}
							/> Since Then 计时器</a
						>
					</span>
					<br />
					<span>
						<a
							href="https://z.p1gd0g.cc"
							target="_blank"
							rel="noopener noreferrer"
						>
							<img
								class="App-img"
								src="icon/martin-calc.png"
								width={30}
								height={30}
							/> Martin Calc 马丁格尔计算器</a
						>
					</span>
				</p>
			</div>

			<hr />			

			<section>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/blog/${post.id}/`}>
									{post.data.heroImage && (
										<Image
											width={720}
											height={360}
											src={post.data.heroImage}
											alt=""
										/>
									)}
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate
											date={post.data.pubDate}
										/>
									</p>
								</a>
							</li>
						))
					}
				</ul>
				<script>
					window.addEventListener("load", function () {
						function updateLayout() {
							const ul = document.querySelector("ul");
							if (ul === null) return;
							const items = ul.querySelectorAll("li");
							const columnWidth = items[0].offsetWidth;
							const gap = 20; // Adjust as needed
							let columns: any[] = [];
							
							const containerWidth = ul.offsetWidth;
							let columnCount = Math.floor(
								containerWidth / columnWidth,
							);
							if (columnCount === 0) columnCount = 1;
							columns = Array(columnCount).fill(0);

							items.forEach((item, index) => {
								const minHeight = Math.min(...columns);
								const minIndex = columns.indexOf(minHeight);

								item.style.position = "absolute";
								item.style.left = `${minIndex * columnWidth + (minIndex > 0 ? minIndex * gap : 0)}px`;
								item.style.top = `${minHeight}px`;

								columns[minIndex] += item.offsetHeight + gap;
							});

							ul.style.height = `${Math.max(...columns)}px`;
						}

						// Delay the layout update slightly to ensure images are loaded and have dimensions
						setTimeout(updateLayout, 500);

						window.addEventListener("resize", updateLayout);
					});
				</script>
			</section>
		</main>

		<Footer />
	</body>
</html>
